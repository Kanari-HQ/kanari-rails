.jumbotron
  .container
    %img.img-responsive{alt: "Responsive image", src: "/assets/kanari-logo-final.gif"}/
    %p Test your live event with audience feedback
    %p
      %a.btn.btn-primary.btn-lg.kanari-btn Learn more
.container.home
  .row
    .col-md-4.center
      %h2 Enter Event Code
      = form_tag(vote_votes_path, method: "get") do
        .field
          -#= label_tag :event_code
          = text_field_tag :event_code
          %span
            = submit_tag 'Go', class: "btn btn-info btn-lg"
    .col-md-4.center
      %h2 Create an Event
      %a.btn.btn-primary.btn-lg.btn-block.kanari-btn{:href => new_event_path}
        Create Event
        %span.glyphicon.glyphicon-chevron-right


    .col-md-4.center
      - if @events.present?
        %h2 Previous Events
        .panel.panel-default
          %ul.list-group
          - @events.each do |event|
            %li.list-group-item
              = link_to event.title, event