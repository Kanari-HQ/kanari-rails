= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, :class => "col-lg-2 control-label"
    .col-lg-10
      = f.text_field :title
  .field
    = f.label :event_code
    = f.text_field :event_code
  - if @event.soundcloud_url
    .field
      = f.label :soundcloud_url
      = f.text_field :soundcloud_url
  .actions
    = f.submit 'Save', class: "btn btn-info btn-lg"


